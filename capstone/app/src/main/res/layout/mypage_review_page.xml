<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:padding="10dp"
    tools:context=".MyReviewActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="내가 쓴 리뷰"
            android:textSize="35dp"
            android:fontFamily="@font/tt"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1D1B4A"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">
        <TextView
            android:textColor="#6C69B0"
            android:fontFamily="@font/sam600"
            android:textSize="15dp"
            android:background="@drawable/tv_border_noneright"
            android:text="[ 가게 ]"
            android:id="@+id/textView_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"/>
        <TextView
            android:textColor="#6C69B0"
            android:background="@drawable/tv_border_noneright"
            android:fontFamily="@font/sam600"
            android:textSize="15dp"
            android:text="[ 별점 ]"
            android:id="@+id/textView_list_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"/>
        <TextView
            android:textColor="#6C69B0"
            android:fontFamily="@font/sam600"
            android:background="@drawable/tv_border"
            android:textSize="15dp"
            android:text="[ 작성내용 ]"
            android:id="@+id/textView_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_marginTop="5dp"
        android:id="@+id/listView_main_list" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/textView_main_result"
        android:visibility="gone"/>

</LinearLayout>