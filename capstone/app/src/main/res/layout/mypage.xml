<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_basic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:ems="10"
        android:text="마이페이지"
        android:textSize="30dp"
        android:fontFamily="@font/tt"
        android:textColor="#1D1B4A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/basicInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="@id/tv_basic"
        app:layout_constraintStart_toStartOf="@id/tv_basic"
        app:layout_constraintTop_toTopOf="@id/tv_basic">
        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/image"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="7">
            <TextView
                android:textColor="#111111"
                android:fontFamily="@font/sam600"
                android:textSize="17dp"
                android:text="이름"
                android:gravity="center"
                android:id="@+id/textView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"/>
            <TextView
                android:textColor="#111111"
                android:fontFamily="@font/sam600"
                android:textSize="17dp"
                android:text="닉네임"
                android:gravity="center"
                android:id="@+id/textView_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"/>
            <TextView
                android:textColor="#111111"
                android:fontFamily="@font/sam600"
                android:textSize="12dp"
                android:text="이메일"
                android:gravity="center"
                android:id="@+id/textView_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_scrap"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="스크랩 목록"
        android:textSize="17dp"
        android:textColor="#1D1B4A"
        android:fontFamily="@font/sam600"
        android:background="@drawable/button_background2"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/basicInfo"
        app:layout_constraintStart_toStartOf="@+id/basicInfo"
        app:layout_constraintTop_toBottomOf="@+id/basicInfo"
        tools:ignore="scrap_OnClick" />

    <Button
        android:id="@+id/btn_review"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="내가 쓴 리뷰"
        android:textSize="17dp"
        android:textColor="#1D1B4A"
        android:fontFamily="@font/sam600"
        android:background="@drawable/button_background2"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/btn_scrap"
        app:layout_constraintStart_toStartOf="@+id/btn_scrap"
        app:layout_constraintTop_toBottomOf="@+id/btn_scrap"
        tools:ignore="scrap_OnClick" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="로그아웃"
        android:textSize="17dp"
        android:textColor="#1D1B4A"
        android:fontFamily="@font/sam600"
        android:background="@drawable/button_background2"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/btn_review"
        app:layout_constraintStart_toStartOf="@+id/btn_review"
        app:layout_constraintTop_toBottomOf="@+id/btn_review"
        tools:ignore="scrap_OnClick" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="회원탈퇴"
        android:textSize="17dp"
        android:textColor="#1D1B4A"
        android:fontFamily="@font/sam600"
        android:background="@drawable/button_background2"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/btn_logout"
        app:layout_constraintStart_toStartOf="@+id/btn_logout"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout"
        tools:ignore="scrap_OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>